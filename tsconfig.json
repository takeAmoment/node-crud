{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",            // Allows TypeScript to output ESM-compliant JS
    "moduleResolution": "node",    // Resolve modules in a Node.js-compatible manner
    "esModuleInterop": true,       // Ensures compatibility with non-ESM modules
    "outDir": "./dist",            // Outputs JavaScript to the dist directory
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true                 // Optional but recommended for stricter type-checking
  },
  "include": ["src/**/*"],          // Include your TypeScript files
  "exclude": ["node_modules"]       // Exclude node_modules
}
